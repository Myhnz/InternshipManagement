@model InternshipManagement.Models.EditCVViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body{
        background-color: #f8f9fa;
    }
    .card-img-top {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card py-3">
                <img src="~/Content/AvatarImages/@Model.User.Avatar" class="card-img-top" alt="Hình đại diện">
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.User.FirstName @Model.User.LastName</h3>
                    <p class="card-text"><strong>Tên đăng nhập:</strong> @Model.User.Username</p>
                    <p class="card-text"><strong>Email:</strong> @Model.User.Email</p>
                    <p class="card-text"><strong>Điện thoại:</strong> @Model.User.Phone</p>
                    <p class="card-text"><strong>Địa chỉ:</strong> @Model.User.Address</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin hồ sơ</h4>
                    <p class="card-text"><strong>Tiểu sử:</strong></p>
                    @if (Model.Profile != null)
                    {
                        <p>@Model.Profile.Bio</p>
                    }
                    else
                    {
                        <p>Không có thông tin</p>
                    }
                    <p class="card-text"><strong>Chứng chỉ:</strong></p>
                    @if (Model.Profile != null && Model.Profile.Certifications != null)
                    {
                        <p>@Model.Profile.Certifications</p>
                    }
                    else
                    {
                        <p>Không có thông tin</p>
                    }
                    <p class="card-text"><strong>Website:</strong></p>
                    @if (Model.Profile != null && !string.IsNullOrEmpty(Model.Profile.Website))
                    {
                        <p><a href="@Model.Profile.Website" target="_blank">@Model.Profile.Website</a></p>
                    }
                    else
                    {
                        <p>Không có thông tin</p>
                    }
                    <p class="card-text"><strong>Kinh nghiệm:</strong></p>
                    @if (Model.Profile != null && !string.IsNullOrEmpty(Model.Profile.Experience))
                    {
                        <p>@Model.Profile.Experience</p>
                    }
                    else
                    {
                        <p>Không có thông tin</p>
                    }
                    <p class="card-text"><strong>Kỹ năng:</strong></p>
                    @if (Model.Profile != null && !string.IsNullOrEmpty(Model.Profile.Skills))
                    {
                        <p>@Model.Profile.Skills</p>
                    }
                    else
                    {
                        <p>Không có thông tin</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

