@model InternshipManagement.Models.User

<div class="modal-header">
    <h5 class="modal-title" id="userDetailModalLabel">User Profile</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class=" mb-3 row">
                    <div class="square m-0 col-5 col-md-12">
                        <img src="~/Content/avatars/@Model.Avatar" class="w-100" alt="Avatar">
                    </div>
                    <div class=" col-7 col-md-12 m-0">
                        <h4 class="text-center mt-2">@Model.FirstName @Model.LastName</h4>
                        <p class="m-3">
                            Username: @Model.Username <br>
                            Email: @Model.Email <br>
                            Phone: @Model.Phone <br>
                            Address: @Model.Address <br>
                            Role: @Model.UserRole.RoleName
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>


                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateDate)</dd>

                        <dt class="col-sm-4">Updated Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateDate)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>

